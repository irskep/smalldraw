{
  "name": "demo-ui-vanillajs",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && mkdir -p dist && bun build src/main.ts --outdir dist --target=browser && cp src/index.html dist/index.html && cp src/styles.css dist/styles.css",
    "dev": "bun ./src/index.html --watch",
    "test": "bun test",
    "ts:check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@automerge/automerge": "^3.2.3",
    "@automerge/automerge-repo": "2.5.1",
    "@automerge/automerge-repo-network-broadcastchannel": "2.5.1",
    "@automerge/automerge-repo-storage-indexeddb": "2.5.1",
    "@smalldraw/core": "workspace:*",
    "@smalldraw/ui-vanillajs": "workspace:*"
  }
}
