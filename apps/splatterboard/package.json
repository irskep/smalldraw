{
  "name": "splatterboard",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run ./scripts/build.ts",
    "dev": "bun ./src/index.html --watch --host=0.0.0.0:3000",
    "generate:coloring-assets": "bun run ./scripts/generate-coloring-assets.ts",
    "serve": "bunx serve dist",
    "test": "bun test --preload ./src/__tests__/setup.ts --timeout 4000",
    "lint": "bunx biome check --write",
    "ts:check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@smalldraw/core": "workspace:*",
    "@smalldraw/geometry": "workspace:*",
    "@smalldraw/renderer-canvas": "workspace:*",
    "@smalldraw/renderer-raster": "workspace:*",
    "lucide": "^0.563.0",
    "nanostores": "^0.11.4",
    "open-props": "^1.7.23",
    "redom": "^3.27.1"
  },
  "devDependencies": {
    "@automerge/automerge": "^3.2.3",
    "@smalldraw/testing": "workspace:*",
    "@types/redom": "^3.2.4",
    "canvas": "^3.1.0",
    "happy-dom": "^14.10.1"
  }
}
