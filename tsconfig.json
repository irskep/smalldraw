{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["bun-types"],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@smalldraw/core": ["packages/core/src/index.ts"],
      "@smalldraw/renderer-konva": ["packages/renderer-konva/src/index.ts"],
      "@smalldraw/ui-react": ["packages/ui-react/src/index.ts"]
    },
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
